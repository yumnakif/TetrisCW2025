<?import com.comp2042.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<BorderPane fx:controller="com.comp2042.GuiController"
      xmlns:fx="http://javafx.com/fxml">
<center>
    <StackPane fx:id="stackroot">
        <Pane>
            <BorderPane styleClass="gameBoard" fx:id="gameBoard">
                <center>
                    <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="30" layoutX="40"/>
                </center>
            </BorderPane>

            <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>
            <GridPane fx:id="ghostPanel" hgap="1" vgap="1"/>
            <Group fx:id="groupNotification" layoutX="14" layoutY="203">
            </Group>
        </Pane>
    </StackPane>
</center>
    <right>
        <VBox spacing="10" alignment="TOP_CENTER" style="-fx-padding: 7;">

            <VBox alignment="CENTER" spacing="10" styleClass="info-box" fx:id="stopwatchBox">
                <Label text="Time" styleClass="info-title"/>
                <Label fx:id="stopwatchLabel" styleClass="info-value"/>
            </VBox>
            <VBox alignment="CENTER" spacing="10" styleClass="info-box" fx:id="timerBox">
                <Label text="Time" styleClass="info-title"/>
                <Label fx:id="timerLabel" styleClass="info-value"/>
            </VBox>
            <VBox alignment="CENTER" spacing="20" styleClass="info-box" prefHeight="130" prefWidth="140">
                <Label text="NEXT" styleClass="info-title"/>
                <GridPane fx:id="nextBlockPreview" hgap="2" vgap="2" minHeight="70" minWidth="100"/>
            </VBox>
            <VBox alignment="CENTER" spacing="10" styleClass="info-box">
                <Label text="Score" styleClass="info-title" />
                <Label fx:id="scoreLabel" text="0" styleClass="info-value" />
            </VBox>
            <VBox alignment="CENTER" spacing="10" styleClass="info-box">
                <Label text="High Score" styleClass="info-title" />
                <Label fx:id="highScoreLabel" text="0" styleClass="info-value" />
            </VBox>
            <VBox alignment="CENTER" spacing="8" styleClass="info-box">
                <Label text="LEVEL" styleClass="info-title" />
                <Label fx:id="levelLabel" text="1" styleClass="info-value"/>
            </VBox>
            <VBox alignment="CENTER" spacing="8" styleClass="info-box">
                <Label text="Lines:" styleClass="info-title" />
                <Label fx:id="linesRemovedLabel" text="0" styleClass="info-value" />
            </VBox>
            <Pane VBox.vgrow="ALWAYS"/>

            <Button fx:id="pauseButton" text="Pause" onAction="#pauseGame" prefWidth="120" styleClass="pause-btn" />
        </VBox>
    </right>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>

</BorderPane>