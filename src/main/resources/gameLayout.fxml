<?import com.comp2042.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<BorderPane fx:controller="com.comp2042.GuiController"
      xmlns:fx="http://javafx.com/fxml">
<center>
    <Pane >
        <BorderPane styleClass="gameBoard" fx:id="gameBoard">
            <center>
                <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="30" layoutX="40"/>
            </center>
        </BorderPane>
        <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>
        <Group fx:id="groupNotification" layoutX="14" layoutY="203">
            <VBox alignment="CENTER">
                <GameOverPanel fx:id="gameOverPanel"></GameOverPanel>
            </VBox>
        </Group>
    </Pane>
</center>


    <right>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 7;">

            <VBox alignment="CENTER" spacing="20" styleClass="info-box" prefHeight="160" prefWidth="140">
                <Label text="NEXT" styleClass="info-title"/>
                <GridPane fx:id="nextBlockPreview" hgap="2" vgap="2" minHeight="100" minWidth="100"/>
            </VBox>
            <VBox alignment="CENTER" spacing="10" styleClass="info-box">
                <Label text="Score" styleClass="info-title" />
                <Label fx:id="scoreLabel" text="0" styleClass="info-value" />
            </VBox>

            <VBox alignment="CENTER" spacing="10" styleClass="info-box">
                <Label text="LEVEL" styleClass="info-title" />
                <Label fx:id="levelLabel" text="1" styleClass="info-value"/>
            </VBox>

            <Pane VBox.vgrow="ALWAYS"/>

            <Button fx:id="pauseButton" text="Pause" onAction="#pauseGame" prefWidth="120" styleClass="pause-btn" />
        </VBox>
    </right>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>

</BorderPane>